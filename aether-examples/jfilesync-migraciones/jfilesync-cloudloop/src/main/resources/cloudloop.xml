<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<cloudloop-config>
	<adapters>
		<adapter impl="com.cloudloop.storage.adapter.nirvanix.NirvanixCloudStore" name="nirvanix" type="storage" />
	</adapters>
	<stores>
		<default-store>amazon</default-store>
		<store>
			<name>amazon</name>
			<adapter>nirvanix</adapter>
			<encrypted>false</encrypted>
  	 		<property name="user-login">USER_LOGIN</property>
   			<property name="user-password">USER_PASSWORD</property>
  			<property name="app-key">APP_KEY</property>
   			<property name="app-name">APP_NAME</property>
		</store>
	</stores>
</cloudloop-config>
